# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
APP_NAME=GRAVIXAI Backend
APP_VERSION=1.0.0

# Database
DATABASE_URL=sqlite:///./gravixai.db

# Facebook OAuth v19
FACEBOOK_APP_ID=your_fb_app_id
FACEBOOK_APP_SECRET=your_fb_app_secret
FACEBOOK_REDIRECT_URI=http://localhost:8000/api/social/facebook/callback
FACEBOOK_API_VERSION=v19.0

# Instagram Settings
INSTAGRAM_GRAPH_API_VERSION=v19.0

# Gemini API
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-1.5-pro

# Redis (for RQ)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# Job Queue
QUEUE_NAME=default
WORKER_TIMEOUT=3600

# File Storage
VIDEOS_DIR=./videos
CHUNK_DURATION=35
REEL_WIDTH=1080
REEL_HEIGHT=1920

# YouTube
YT_DLP_PATH=yt-dlp
FFMPEG_PATH=ffmpeg

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://10.0.0.11:3000

# Logging
LOG_LEVEL=INFO
